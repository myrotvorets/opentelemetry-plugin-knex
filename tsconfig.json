{
  "compilerOptions": {
      "target": "es2022",
      "module": "CommonJS",
      "noEmitOnError": true,
      "outDir": "./dist",
      "rootDirs": ["./lib", "./test"],
      "sourceMap": false,
      "declaration": true,
      "removeComments": false,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "typeRoots": [
          "./node_modules/@types/"
      ]
  },
  "compileOnSave": true
}
