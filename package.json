{
  "name": "@myrotvorets/opentelemetry-plugin-knex",
  "version": "0.24.0",
  "description": "OpenTelemetry knex automatic instrumentation package",
  "scripts": {
    "build": "tsc",
    "lint": "eslint -f gha .",
    "lint:fix": "eslint . --fix",
    "pretest": "npm run lint",
    "test": "if [ -z \"${SONARSCANNER}\" ]; then mocha; else nyc --reporter=text --reporter=lcovonly -- mocha -R mocha-reporter-sonarqube -O filename=test-report.xml; fi",
    "pretest:coverage": "npm run lint",
    "test:coverage": "nyc --reporter=text --reporter=lcovonly -- mocha",
    "posttest": "npm run build",
    "prepare": "npm run build"
  },
  "author": "Myrotvorets <support@myrotvorets.center> (https://myrotvorets.center/)",
  "license": "MIT",
  "files": [
    "dist/lib/*.js",
    "dist/lib/*.d.ts"
  ],
  "typings": "dist/lib/index.d.ts",
  "devDependencies": {
    "@myrotvorets/eslint-config-myrotvorets-ts": "^2.2.5",
    "@opentelemetry/context-async-hooks": "^1.0.0",
    "@opentelemetry/sdk-trace-base": "^1.0.1",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^10.0.0",
    "@types/node": ">= 12",
    "chai": "^4.3.4",
    "eslint-formatter-gha": "^1.0.2",
    "knex": "^2.0.0",
    "merge": "^2.1.1",
    "mocha": "^10.0.0",
    "mocha-reporter-gha": "^1.0.1",
    "mocha-reporter-sonarqube": "^2.0.0",
    "nyc": "^15.1.0",
    "sqlite3": "^5.0.8",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.0.1",
    "@opentelemetry/core": "^1.0.0",
    "@opentelemetry/instrumentation": "^0.34.0",
    "@opentelemetry/semantic-conventions": "^1.0.0"
  },
  "peerDependencies": {
    "knex": "^0.95.0 || ^1.0.0 || ^2.0.0"
  },
  "main": "dist/lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myrotvorets/opentelemetry-plugin-knex.git"
  },
  "keywords": [
    "opentelemetry-plugin",
    "opentelemetry",
    "knex",
    "knexjs",
    "instrumentation"
  ],
  "bugs": {
    "url": "https://github.com/myrotvorets/opentelemetry-plugin-knex/issues"
  },
  "homepage": "https://github.com/myrotvorets/opentelemetry-plugin-knex#readme",
  "publishConfig": {
    "access": "public"
  }
}
